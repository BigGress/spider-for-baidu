{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./lib",
    "lib": [
      "es5",
      "es2015",
      "dom"
    ]
  },
  "compileOnSave": false,
  "filesGlob": [
    "./lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
